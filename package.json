{
  "name": "@jabrown93/homebridge-onkyo",
  "version": "1.0.0",
  "description": "Homebridge plugin for Onkyo Receivers",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "xo",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js --ext .ts --ignore-path node_modules",
    "lint:fix": "eslint . --ext .js --ext .ts --ignore-path node_modules",
    "clean": "rimraf ./dist",
    "compile": "tsc",
    "build": "rimraf ./dist && npm-run-all clean compile",
    "watch": "npm run setup-config && npm run build && npm link && nodemon",
    "prepublishOnly": "npm-run-all prettier lint build",
    "semantic-release": "cross-env semantic-release --no-ci",
    "release": "npm-run-all build semantic-release",
    "prepare": "husky",
    "tsc": "tsc --noEmit",
    "setup-config": "if [ ! -f ./test/hbConfig/config.json ]; then cp ./test/hbConfig/config-template.json ./test/hbConfig/config.json; fi"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jabrown93/homebridge-onkyo.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "async": "*",
    "js-yaml": "*",
    "polling-to-event": "^2.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/async-lock": "^1.4.2",
    "@types/eslint__js": "^8.42.3",
    "eslint": "9.18.0 ",
    "eslint-plugin-ava": "^15.0.1",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-unicorn": "latest",
    "homebridge": "^2.0.0-beta.26",
    "homebridge-config-ui-x": "^5.0.0-beta.35",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1",
    "xo": ">=0.47.0"
  },
  "keywords": [
    "homebridge-plugin",
    "homebridge",
    "onkyo-avr",
    "onkyo"
  ],
  "engines": {
    "node": "^18.20.4 || ^20.18.0 || ^22.10.0",
    "homebridge": "^1.8.0 || ^2.0.0-beta.0"
  },
  "lint-staged": {
    "*.{js,mjs,ts,json,md}": [
      "prettier --write"
    ]
  },
  "author": "gw-wiscon <gw.wiscon@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jabrown93/homebridge-onkyo/issues"
  },
  "homepage": "https://github.com/jabrown93/homebridge-onkyo#readme",
  "xo": {
    "space": false,
    "ignores": "eiscp",
    "rules": {
      "unicorn/prefer-module": "warn",
      "unicorn/no-new-array": "warn",
      "unicorn/no-array-for-each": "warn",
      "camelcase": "off",
      "kebabCase": "off",
      "no-mixed-spaces-and-tabs": "warn",
      "no-useless-escape": "warn",
      "indent": "off",
      "quotes": "warn",
      "capitalized-comments": "off",
      "no-var": "warn",
      "prefer-destructuring": "off",
      "prefer-arrow-callback": "warn",
      "object-shorthand": [
        "off",
        "always",
        {
          "ignoreConstructors": true
        }
      ],
      "quote-props": "error",
      "no-unused-vars": "warn",
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-use-before-define": [
        "error",
        {
          "classes": false
        }
      ]
    }
  }
}
